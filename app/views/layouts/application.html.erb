<!DOCTYPE html>
<html>
<head>
  <title>Amdb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul>
  <% session.each do |key, value| %>
    <li><%= key %>: <%= value %></li>
  <% end %>
  </ul>
  <nav>
    <%= link_to "Home", root_url %> |
    <%= link_to "Directors", directors_url %> |
    <%= link_to "Movies", movies_url %> |
    <%= link_to "Roles", roles_url %> |
    <%= link_to "Actors", actors_url %> |
    <%= link_to "Votes", votes_url %> |
    <%= link_to "Users", users_url %> |
    <% if session[:user_id] == nil   # no one is logged in  %>
      <%= link_to "Sign In", login_url %>
    <% else # someone is logged in %>
      Logged in as <%= User.find_by_id(session[:user_id]).name %>
      <%= link_to 'Sign Out', '/sessions/bye' %>
    <% end %>
  </nav>
  <p id="notice"><%= notice %></p>

  <%= yield %>

</body>
</html>
